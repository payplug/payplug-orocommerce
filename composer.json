{
    "name": "payplug/payplug-orocommerce",
    "description": "Module Payplug pour OroCommerce",
    "license": "OSL-3.0",
    "require": {
        "payplug/payplug-php": "^3.5",
        "oro/commerce": "5.0.*"
    },
    "repositories": {
        "oro": {
            "type": "composer",
            "url": "https://packagist.orocrm.com"
        },
        "asset-packagist": {
            "type": "composer",
            "url": "https://asset-packagist.orocrm.com"
        }
    },
    "autoload": {
        "psr-4": {"Payplug\\Bundle\\PaymentBundle\\": "src"},
        "exclude-from-classmap": ["/Tests/"]
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "allow-plugins": {
            "phpro/grumphp": true
        }
    },
    "require-dev": {
        "phpmd/phpmd": "2.6.*",
        "phpunit/phpunit": "9.*",
        "sebastian/phpcpd": "6.0.*",
        "phpro/grumphp": "^1.8.1",
        "friendsofphp/php-cs-fixer": "^3.4",
        "friendsoftwig/twigcs": "^v5.1",
        "phpstan/phpstan": "^1.3",
        "phpstan/phpstan-symfony": "^1.0",
        "squizlabs/php_codesniffer": "^3.6"
    }
}
